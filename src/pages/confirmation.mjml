<!-- Company Header -->
<mj-section>
	<mj-column>
		<mj-image width="300px" src="https://888826.smushcdn.com/2058704/wp-content/uploads/2020/09/main_header_logo-300x171.png?lossy=0&strip=1&webp=1" />
	</mj-column>
</mj-section>

<!-- Header Image -->
<mj-section background-color="#023E40" padding="0">
	<mj-hero css-class="hero-text-adjuster" mode="fixed-height" height="600px" background-url="https://888826.smushcdn.com/2058704/wp-content/uploads/2021/03/ConfirmHeader3.jpg?lossy=0&strip=1&webp=1" padding-top="228px">
		<mj-text color="#B49167" container-background-color="rgba(2,62,64,0.7)" font-family="Oswald, sans-serif" font-weight="600" align="center" font-size="53px" padding-right="0" padding-left="0">ONE LAST STEP...</mj-text>
		<mj-button css-class="button" container-background-color="rgba(2,62,64,0.7)" border="1px solid #B49167;"font-family="Oswald, sans-serif" border-radius="30px" font-size="20px" font-weight="600" padding-bottom="15px" href="{sp-confirm-url}">YES, CONFIRM MY EMAIL</mj-button>
	</mj-hero>
</mj-section>

<!-- Introduction Text -->
